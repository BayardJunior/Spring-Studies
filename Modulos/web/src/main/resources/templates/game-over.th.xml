<thlogic>
    <attr sel="#headId" th:replace="~{fragments/head :: headFragment}"/>
    <attr sel="#game-title" th:text="#{game.title}"/>
    <attr sel="#game-over" th:text="#{game.over}"/>
    <attr sel="#result-message" th:text="${__${T(brincando.spring5.util.AttributesNames).RESULT_MESSAGE}__}"/>
    <attr sel="#restart" th:href="@{__${T(brincando.spring5.util.GameMappings).RESTART}__}"
                         th:text="#{game.restart}"/>
    <attr sel="#homeId" th:href="@{__${T(brincando.spring5.util.GameMappings).HOME}__}"
            th:text="#{game.home}"/>
    <attr sel="#footerId" th:replace="~{fragments/footer :: footFragment}"/>
</thlogic>